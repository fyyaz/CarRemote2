<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:text="@string/hello_world" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/textView" />

    <ImageButton
        android:src="@drawable/up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/forward"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:src ="@drawable/lfwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/L_FWD"
        android:layout_above="@+id/button"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BRAKE"
        android:id="@+id/button"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:src = "@drawable/rfwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/R_FWD"
        android:layout_alignBottom="@+id/L_FWD"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:src="@drawable/lrev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/L_REV"
        android:layout_below="@+id/button"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:src="@drawable/down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/down"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:src = "@drawable/rrev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/R_REV"
        android:layout_alignStart="@+id/R_FWD"
        android:layout_alignTop="@+id/L_REV" />

</RelativeLayout>
